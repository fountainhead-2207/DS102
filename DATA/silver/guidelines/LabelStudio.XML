<View style="font-family: 'Roboto', sans-serif;">
  
  <View style="padding: 15px; background: #f0f4f8; border-radius: 5px; margin-bottom: 15px;">
    <Header value="ðŸ“˜ Book Identity" size="4"/>
    <View style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
      <Text name="id" value="ID: $Unnamed: 0" />
      <Text name="title" value="Title: $title" style="font-weight: bold;" />
      <Text name="author" value="Author: $author" />
      <Text name="genre" value="Genre: $Genre" />
      <Text name="year" value="Year: $year" />
      <Text name="pub_year" value="Pub Year: $publication_year" />
      <Text name="expert" value="Is Expert: $is_expert" />
    </View>
  </View>

  <View style="display: flex; gap: 15px; margin-bottom: 20px;">
    
    <View style="flex: 1; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
      <Header value="ðŸ“Š Critical Metrics" size="6" />
      <Text name="auth_rating" value="Author Rating: $Author_Rating" />
      <Text name="total_weeks" value="Total Weeks: $total_weeks" />
      <Text name="best_rank" value="Best Rank: $best_rank" />
      <Text name="worst_rank" value="Worst Rank: $worst_rank" />
      <Text name="mean_rank" value="Mean Rank: $mean_rank" />
      <Text name="debut_rank" value="Debut Rank: $debut_rank" />
    </View>

    <View style="flex: 1; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
      <Header value="â­ Popular Metrics" size="6" />
      <Text name="avg_rating" value="Avg Rating: $average_rating" />
      <Text name="rating_count" value="Count: $ratings_count" />
      <Text name="rating_individual" value="Current Rating: $rating" />
      <Text name="votes" value="Votes: $n_votes" />
    </View>

    <View style="flex: 1; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
      <Header value="ðŸ’° Commercial Metrics" size="6" />
      <Text name="units" value="Units Sold: $Units_Sold" />
      <Text name="gross" value="Gross Sales: $Gross_Sales" />
      <Text name="price" value="Price: $Sale_Price" />
      <Text name="sales_rank" value="Sales Rank: $Sales_Rank" />
    </View>
  </View>

  <Header value="ðŸ“ Context &amp; Review" size="4"/>
  
  <View style="padding: 10px; border-left: 4px solid #2ecc71; background: #f9f9f9; margin-bottom: 10px;">
    <Header value="Book Description" size="6"/>
    <Text name="description" value="$description" />
  </View>

  <View style="padding: 10px; border-left: 4px solid #3498db; background: #f9f9f9; margin-bottom: 20px;">
    <Header value="Review Text" size="6"/>
    <Text name="content" value="$review_text" />
  </View>


  <View style="padding: 20px; border: 2px solid #333; border-radius: 8px; background: white;">
    <Header value="ðŸŽ¯ LABELING DECISION" size="4" style="text-align: center;"/>
    
    <View style="display: flex; justify-content: space-around;">
      
      <View>
        <Header value="1. Critical Success" size="6"/>
        <Choices name="critical_success" toName="content" choice="single" required="true">
          <Choice value="Low"/>
          <Choice value="Moderate"/>
          <Choice value="High"/>
          <Choice value="Canonical"/>
        </Choices>
      </View>

      <View>
        <Header value="2. Popular Success" size="6"/>
        <Choices name="popular_success" toName="content" choice="single" required="true">
          <Choice value="Low"/>
          <Choice value="Moderate"/>
          <Choice value="High"/>
          <Choice value="Mass"/>
        </Choices>
      </View>

      <View>
        <Header value="3. Commercial Success" size="6"/>
        <Choices name="commercial_success" toName="content" choice="single" required="true">
          <Choice value="Failure"/>
          <Choice value="Low"/>
          <Choice value="Moderate"/>
          <Choice value="Bestseller"/>
          <Choice value="Blockbuster"/>
        </Choices>
      </View>

    </View>
  </View>

</View>